<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.mapper.OrdersMapper">
    <select id="getList" resultType="com.green.vo.OrdersVO">
        select * from orders
    </select>
    <select id="read" resultType="com.green.vo.OrdersVO">
        select * from orders where id=#{id}
    </select>
    <insert id="insert">
        insert into
        orders(id,orders_name,orders_id,orders_address,orders_phonenumber,orders_payment,orders_date,member_id,product_id)
        values
        (#{id},#{orders_name},#{orders_id},#{orders_address},#{orders_phonenumber},#{orders_payment},now(),#{member_id},#{product_id})
    </insert>
    <delete id="delete">
        delete from orders where id=#{id}
    </delete>
    <update id="update">
        update member
        set orders_name =#{orders_name}, orders_id=#{orders_id}, orders_address=#{orders_address},
        orders_phonenumber=#{orders_phonenumber}, orders_payment=#{orders_payment}
        where id = #{id}
    </update>
</mapper>